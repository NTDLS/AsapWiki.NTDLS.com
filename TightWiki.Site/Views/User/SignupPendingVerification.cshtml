@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    tr.padded td {
        padding-bottom: 0.5em;
        padding-top: 0.5em;
        padding-left: 0.5em;
        padding-right: 0.5em;
    }
</style>

<div class="jumbotron">
    <table border="0" width="600" cellpadding="5">
        <tbody>
            <tr>
                <td height="52" valign="middle" align="left">
                    <h2>Signup pending email verification.</h2>
                    You are now signed up but you will not be able to <a href="/User/Login">login</a> until you verify your email address.<br /><br />
                    An email has been dispatched to the address you provided for you to verify your email address, check it for a verification link.
                    If you are having trouble finding the email, check your spam folders or use the @Html.ActionLink("Forgot Password", "Forgot", "User") form to get a new verification email.<br />
                </td>
            </tr>
        </tbody>
    </table>
</div>
