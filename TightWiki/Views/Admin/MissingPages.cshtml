@model TightWiki.Models.ViewModels.Admin.MissingPagesViewModel
@using TightWiki.Library
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    var wikiContext = ViewData["WikiContext"] as TightWiki.WikiContextState ?? throw new Exception("Wiki State Context cannot be null.");
}

<h3>
    Missing Pages
</h3>

<font size="3" face="ARIAL,HELVETICA">
    Pages that have been linked to, but do not exist.<br /><br />
</font>

<table class="fixedTable100" border="0" cellpadding="0">
    <tbody>
        <tr>
            <td height="52" valign="middle" align="left">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Html.Raw(Model.ErrorMessage)</div>
                }
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success">@Html.Raw(Model.SuccessMessage)</div>
                }

                @using (Html.BeginForm(FormMethod.Get))
                {
                    <table class="table fixedTable100 table-striped" border="0" cellspacing="0" cellpadding="0">
                        <thead>
                            <tr>
                                <td><strong><a href="?@QueryStringConverter.OrderHelper(wikiContext, "SourcePage")">Source Page</a></strong></td>
                                <td><strong><a href="?@QueryStringConverter.OrderHelper(wikiContext, "TargetPage")">Target Page</a></strong></td>
                            </tr>
                        </thead>

                        @foreach (var p in Model.Pages)
                        {
                            <tr>
                                <td><a href="/@p.SourcePageNavigation">@p.SourcePageName</a></td>
                                <td><a href="/@p.TargetPageNavigation/Edit?Name=@p.TargetPageName">@p.TargetPageName</a></td>
                            </tr>
                        }
                    </table>

                    @Html.Raw(TightWiki.Library.PageSelectorGenerator.Generate(Context.Request.QueryString, Model.PaginationPageCount))
                }
            </td>
        </tr>
    </tbody>
</table>
