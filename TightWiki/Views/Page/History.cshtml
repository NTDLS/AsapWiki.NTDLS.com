@model TightWiki.Shared.Models.View.PageHistoryModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header"><h3>Page History</h3></div>
    <div class="card-body">
        <font size="4" face="ARIAL,HELVETICA">
            All changes that have been made to the page. <br /><br />
        </font>

        @if (ViewContext.ViewData.ModelState.Where(x => x.Key == "").Any())
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        @if (ViewContext.ViewData.ModelState.Where(x => x.Key == "").Any())
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <table class="table table-bordered" border="0" width="100%" cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td height="52" valign="middle" align="center">

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }

                        @using (Html.BeginForm())
                        {
                            <table class="table table-striped" border="0" width="100%" cellspacing="0" cellpadding="0">
                                <thead>
                                    <tr>
                                        <td><strong>Revision</strong></td>
                                        <td><strong>Modified By</strong></td>
                                        <td><strong>Modified Date</strong></td>
                                        <td><strong>Summary</strong></td>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var h in Model.History)
                                    {
                                        <tr>
                                            <td><a href="/@ViewBag.Config.PageNavigation/r/@h.Revision" target="_blank" rel="noopener">@Html.DisplayTextFor(x => h.Revision)</a></td>
                                            <td>@Html.DisplayTextFor(x => h.ModifiedByUserName)</td>
                                            <td>@Html.DisplayTextFor(x => h.ModifiedDate)</td>
                                            <td>@Html.DisplayTextFor(x => h.ChangeSummary)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            if (@ViewBag.PreviousPage != null)
                            {
                                <a href="/@ViewBag.Config.PageNavigation/History/1">&lt;&lt; First</a>
                                @:&nbsp; | &nbsp;
                                <a href="/@ViewBag.Config.PageNavigation/History/@ViewBag.PreviousPage">&lt; Previous</a>
                            }
                            else
                            {
                                @:&lt;&lt; First &nbsp; | &nbsp; &lt; Previous
                            }
                            @:&nbsp; | &nbsp;

                            if (@ViewBag.NextPage != null)
                            {
                                <a href="/@ViewBag.Config.PageNavigation/History/@ViewBag.NextPage">Next &gt;</a>
                                @:&nbsp; | &nbsp;
                                <a href="/@ViewBag.Config.PageNavigation/History/@ViewBag.PaginationCount">Last &gt;&gt;</a>
                            }
                            else
                            {
                                @:Next &gt; &nbsp; | &nbsp; Last &gt;&gt;
                            }
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
