@model AsapWiki.Shared.Models.EditPage
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table border="0" width="100%" cellpadding="5">
        <tbody>
            <tr>
                <td height="52" valign="middle" align="center">
                    <font size="5" face="ARIAL,HELVETICA" color="#e6e600">
                        @if (@ViewBag.Validation != null)
                        {<blockquote>@Html.Raw(@ViewBag.Validation)</blockquote>}
                    </font>

                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(x => x.Id)

                        <table border="0" width="100%" cellpadding="5">

                            <tr class="padded">
                                <td colspan="2">
                                    <div class="form-group"><button type="submit" class="btn btn-primary rounded-0">Save</button></div>
                                </td>
                            </tr>
                            <tr class="padded">
                                <td width="10">
                                    @Html.LabelFor(x => x.Name)
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => x.Name, new { style = "width:100%" })
                                </td>
                            </tr>
                            <tr class="padded">
                                <td>
                                    @Html.LabelFor(x => x.Description)
                                </td>
                                <td>
                                    @Html.TextBoxFor(x => x.Description, new { style = "width:100%" })
                                </td>
                            </tr>
                            <tr class="padded">
                                <td colspan="2">
                                    @Html.LabelFor(x => x.Body)
                                </td>
                            </tr>
                            <tr class="padded">
                                <td colspan="2">
                                    @Html.TextAreaFor(x => x.Body, new { style = "width:100%;height:600px" })
                                </td>
                            </tr>
                        </table>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>