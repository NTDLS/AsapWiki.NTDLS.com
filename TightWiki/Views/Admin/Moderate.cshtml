@model TightWiki.Shared.Models.View.PageModerateModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    tr.padded td {
        padding-bottom: 0.5em;
        padding-top: 0.5em;
        padding-left: 0.5em;
        padding-right: 0.5em;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading"><h3>Page Moderate</h3></div>
    <div class="panel-body">
        <font size="4" face="ARIAL,HELVETICA">
            Browse pages marked with various processing instructions to see whats in draft, pending deletion, protected, etc.<br /><br />
        </font>

        @if (ViewContext.ViewData.ModelState.Where(x => x.Key == "").Any())
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        @if (ViewContext.ViewData.ModelState.Where(x => x.Key == "").Any())
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <table border="0" width="100%" cellpadding="0">
            <tbody>
                <tr>
                    <td height="52" valign="middle" align="center">

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Error</div>
                        }
                        @if (ViewBag.Success != null)
                        {
                            <div class="alert alert-success">@ViewBag.Success</div>
                        }

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <table border="0" cellspacing="0" cellpadding="5">
                                <tr>
                                    <td>
                                        @Html.DropDownListFor(m => m.Instruction,
                                        new SelectList(Model.Instructions),
                                        "Select Instruction")
                                    </td>
                                    <td colspan="2"><button type="submit" class="btn btn-primary rounded-0 btn-sm">Go</button></td>
                                </tr>
                            </table>

                            <table class="table table-striped" border="0" width="100%" cellspacing="0" cellpadding="0">
                                <thead>
                                    <tr>
                                        <td><strong>Name</strong></td>
                                        <td><strong>Revision</strong></td>
                                        <td><strong>Modified By</strong></td>
                                        <td><strong>Modified Date</strong></td>
                                    </tr>
                                </thead>

                                @foreach (var p in Model.Pages)
                                {
                                    <tr>
                                        <td><a href="/@p.Navigation">@p.Name</a></td>
                                        <td>@p.Revision</td>
                                        <td>@p.ModifiedByUserName</td>
                                        <td>@p.ModifiedDate</td>
                                    </tr>
                                }
                            </table>

                            if (@ViewBag.PreviousPage != null)
                            {
                                <a href="/Page/Moderate/1?Instruction=@Model.Instruction">&lt;&lt; First</a>
                                @:&nbsp; | &nbsp;
                                <a href="/Page/Moderate/@ViewBag.PreviousPage?Instruction=@Model.Instruction">&lt; Previous</a>
                            }
                            else
                            {
                                @:&lt;&lt; First &nbsp; | &nbsp; &lt; Previous
                            }
                            @:&nbsp; | &nbsp;

                            if (@ViewBag.NextPage != null)
                            {
                                <a href="/Page/Moderate/@ViewBag.NextPage?Instruction=@Model.Instruction">Next &gt;</a>
                                @:&nbsp; | &nbsp;
                                <a href="/Page/Moderate/@ViewBag.PaginationCount?Instruction=@Model.Instruction">Last &gt;&gt;</a>
                            }
                            else
                            {
                                @:Next &gt; &nbsp; | &nbsp; Last &gt;&gt;
                            }
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
