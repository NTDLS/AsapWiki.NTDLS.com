@model AsapWiki.Shared.Models.Page
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<table border="0" width="100%" cellpadding="5">
    <tbody>
        <tr bgcolor="#fafafa">
            <td height="52" valign="middle" align="center">

                <font size="5" face="ARIAL,HELVETICA" color="#e6e600">
                    @if (@ViewBag.Validation != null)
                    {<blockquote>@Html.Raw(@ViewBag.Validation)</blockquote>}
                </font>

                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(x => x.Id)

            <table border="0" width="100%" cellpadding="5">

                <tr class="padded">
                    <td>
                        <div class="form-group"><button type="submit" class="btn btn-primary rounded-0">Save</button></div>
                    </td>
                </tr>
                <tr class="padded">
                    <td>
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name, new { style = "width:90%" })
                    </td>
                </tr>
                <tr class="padded">
                    <td>
                        @Html.LabelFor(x => x.Description)
                        @Html.TextBoxFor(x => x.Description, new { style = "width:90%" })
                    </td>
                </tr>
                <tr class="padded">
                    <td>
                        @Html.LabelFor(x => x.Body)
                        @Html.TextAreaFor(x => x.Body, new { style = "width:90%;height:600px" })
                    </td>
                </tr>
            </table>
                }
            </td>
        </tr>
    </tbody>
</table>
