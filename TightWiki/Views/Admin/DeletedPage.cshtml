@model TightWiki.Models.ViewModels.Page.DeletedPageViewModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    var wikiContext = ViewData["WikiContext"] as TightWiki.WikiContextState ?? throw new Exception("Wiki State Context cannot be null.");
}

<div class="card bg-warning mb-3">
    <div class="card-header"><strong>Viewing a deleted page</strong></div>
    <div class="card-body">
        <p class="card-text">
            You are viewing a page which was deleted on @Model.DeletedDate by @Model.DeletedByUserName.<br />

            @Html.Raw(TightWiki.Library.ConfirmActionHelper.GenerateSafeButton("This will restore the deleted page and all of its history. Continue?",
                     "Restore This Page", "/Admin/RestoreDeletedPage/" + @Model.PageId, "/Admin/DeletedPages", Context.Request.Path.Value))
            <br />
        </p>
    </div>
</div>

@Html.Raw(Model.Body)
