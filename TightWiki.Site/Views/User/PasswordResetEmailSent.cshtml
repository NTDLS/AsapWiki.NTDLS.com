@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    tr.padded td {
        padding-bottom: 0.5em;
        padding-top: 0.5em;
        padding-left: 0.5em;
        padding-right: 0.5em;
    }
</style>

<div class="jumbotron">
    <table border="0" width="600" cellpadding="5">
        <tbody>
            <tr>
                <td height="52" valign="middle" align="left">
                    <h3>Password reset.</h3>
                    If an account exists that matches the provided email address then an email has been dispatched to the that email address.
                    Check your email for the password reset link.
                    If you are having trouble finding the email, check your spam folders or use the @Html.ActionLink("Forgot Password", "Forgot", "User") form to get a new verification email.<br />
                </td>
            </tr>
        </tbody>
    </table>
</div>
