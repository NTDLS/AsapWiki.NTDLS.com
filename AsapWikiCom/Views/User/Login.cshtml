@model AsapWiki.Shared.Models.FormLogin
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    tr.padded td {
        padding-bottom: 0.5em;
        padding-top: 0.5em;
        padding-left: 0.5em;
        padding-right: 0.5em;
    }
</style>

<div class="jumbotron">
    <font size="4" face="ARIAL,HELVETICA">
        Start contributing! Login so that you can start editing and creating pages. <br /><br />
    </font>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table border="0" width="400" cellpadding="5">
        <tbody>
            <tr>
                <td height="52" valign="middle" align="center">

                    <font size="5" face="ARIAL,HELVETICA" color="#e6e600">
                        @if (@ViewBag.Validation != null)
                        {<blockquote>@Html.Raw(@ViewBag.Validation)</blockquote>}
                    </font>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <table border="0">
                            <tr class="padded">
                                <td><strong>@Html.LabelFor(m => m.EmailAddress)</strong></td>
                                <td>
                                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "input-control" })
                                </td>
                            </tr>
                            <tr><td colspan="2"><div class="text-danger">@Html.ValidationMessageFor(m => m.EmailAddress)</div></td></tr>
                            <tr class="padded">
                                <td><strong>@Html.LabelFor(m => m.Password)</strong></td>
                                <td>
                                    @Html.PasswordFor(m => m.Password, new { @class = "input-control" })
                                </td>
                            </tr>
                            <tr><td colspan="2"><div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div></td></tr>
                            <tr class="padded">
                                <td>&nbsp;</td>
                                <td>
                                    <div class="form-group"><button type="submit" class="btn btn-primary rounded-0">Login</button></div>
                                </td>
                            </tr>
                        </table>
                    }
                    <font size="3" face="ARIAL,HELVETICA">
                        Not a member? @Html.ActionLink("Signup!", "Signup", "User").<br />
                        Forgot your password? @Html.ActionLink("Reset it!", "Forgot", "User").<br />
                    </font>
                </td>
            </tr>
        </tbody>
    </table>
</div>
